<div class="col-md-4 col-md-offset-4">
    <h2>编辑film</h2>

    <hr>
    <%= form_for @film do |f| %>

    <% if @film.errors.any? %>
    <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    标题
    <%= f.text_field :name %>
    <br>
    叙述
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
