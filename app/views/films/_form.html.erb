<%= form_for @film do |f| %>

<div class="form-film">
    <div class="form-film string optional">
        <%= f.label "name", :class => "string optional control-label" %>
        <%= f.text_field :name, :class => "string optional form-control" %>
    </div>

    <div class="form-film string optional">
        <%= f.label "description", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
