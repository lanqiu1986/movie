
<div class="col-md-12">
  <div class="film">
    <span class="pull-right">
      <% if current_user && current_user.is_favor_of?(@film) %>
      <%= link_to("Write a Review", new_film_review_path(@film), class: "btn btn-default pull-right")%>
        <label class="label label-success"> Favorited </label>
          <%= link_to("favorite cancle",quit_film_path(@film), method: :post, class: "btn btn-default")%>
      <% else %>
        <label class="label label-warning"> Not Favorite </label>
         <%= link_to("Join favorite", join_film_path(@film), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>


    <% if current_user && current_user == @film.user %>
      <%= link_to("Edit", edit_film_path(@film), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @film.name %></h2>
  <p><%= @film.description %></p>

    <table class="table">
    <thead>
     <tr>
        <th>内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @reviews %>
  </div>
</div>
